<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rlIdleBg" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:id="@+id/rl_top_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/img_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="15"
            android:background="@drawable/icon_checkbox_unselected_25x25" />
        

    </RelativeLayout>
    <RelativeLayout android:id="@+id/rl_top_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/rl_top_1" >

	     <ImageView
	         android:id="@+id/img_phone_avatar"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:background="@drawable/icon_avatar" />
	
    </RelativeLayout>
    <RelativeLayout android:id="@+id/rl_top_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/rl_top_2">
	   	<TextView
		   	android:id="@+id/txt_contact_name"
		   	android:layout_width="wrap_content"
		   	android:layout_height="wrap_content"
		   	android:textColor="#000000"
		   	android:textSize="20sp"
		   	android:text="adfadfasdf"
		   	android:gravity="center"
		   	android:layout_marginLeft="10dp"
		   	android:layout_marginTop="2dp" />

	   	<TextView
	   	    android:id="@+id/txt_contact_phone"
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	    android:layout_below="@+id/txt_contact_name"
	   	    android:layout_marginLeft="10dp"
	   	    android:layout_marginTop="2dp"
	   	    android:gravity="center"
	   	    android:text="sdfsdfsdf"
	   	    android:textColor="#000000"
	   	    android:textSize="20sp" />

	  </RelativeLayout>
</RelativeLayout>
    
