<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rlProjectList" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:id="@+id/rl_top1_projectList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp" 
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
	     <TextView
		   	android:id="@+id/txt_bank_info"
		   	android:layout_width="fill_parent"
		   	android:layout_height="wrap_content"
		   	android:textColor="#000000"
		   	android:textSize="12dp"
		   	android:text=""
		    android:layout_marginTop="2dp" />
        <TextView
		   	android:id="@+id/lbl_bank_amount"
		   	android:layout_width="wrap_content"
		   	android:layout_height="wrap_content"
		   	android:textColor="@color/darkGrey"
		   	android:textSize="10dp"
		   	android:text="@string/titleAmount"
		   	android:gravity="center"
		   	android:layout_below ="@+id/txt_bank_info"
		   	android:layout_marginTop="2dp" />

         <TextView
             android:id="@+id/txt_bank_amount"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_toRightOf="@+id/lbl_bank_amount"
             android:gravity="center"
             android:text=""
             android:textColor="@color/darkGrey"
             android:textSize="12dp"
             android:layout_marginLeft="10dp" />
       	<TextView
       	    android:id="@+id/txt_bank_created"
       	    android:layout_width="wrap_content"
       	    android:layout_height="wrap_content"
       	    android:layout_alignBottom="@+id/lbl_bank_amount"
       	    android:layout_toRightOf="@+id/lbl_bank_created"
       	    android:text=""
       	    android:textColor="@color/darkGrey"
       	    android:textSize="12dp" 
       	    android:layout_marginLeft="10dp"/>

       	<TextView
       	    android:id="@+id/lbl_bank_created"
       	    android:layout_width="wrap_content"
       	    android:layout_height="wrap_content"
       	    android:layout_alignBaseline="@+id/txt_bank_created"
       	    android:layout_alignBottom="@+id/txt_bank_created"
       	    android:layout_centerHorizontal="true"
       	    android:text="@string/txt_created"
       	    android:textColor="@color/darkGrey"
       	    android:textSize="12dp" />

	</RelativeLayout>
</RelativeLayout>
